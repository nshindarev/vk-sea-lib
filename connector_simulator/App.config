<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net, Version=1.2.15.0, Culture=neutral, PublicKeyToken=669e0ddf0bb1aa2a" />
  </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
    <appSettings>
        <add key="AnalyzeCompany" value="Peter Service" />
    </appSettings>
  <log4net>
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="Logs\debug_logs.log"/>
      <param name="AppendToFile" value="true"/>
      <maxSizeRollBackups value="10"/>
      <maximumFileSize value="5MB"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d  %-5p %m%n"/>
      </layout>
    </appender>

    <appender name="ErrorFile" type="log4net.Appender.RollingFileAppender">
      <file value="Logs\exceptions_occured_list.log"/>
      <appendToFile value="true"/>
      <maximumFileSize value="5MB"/>
      <maxSizeRollBackups value="10"/>
      <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%level %thread %logger - %message%newline"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
          <levelMin value="ERROR"/>
          <levelMax value="FATAL"/>
      </filter>
    </appender>

    <appender name="Console" type="log4net.Appender.ConsoleAppender">
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date %-5level: %message%newline" />
        </layout>
        <filter type="log4net.Filter.LevelRangeFilter">
          <levelMin value="ALL"/>
          <levelMax value="INFO"/>
        </filter>
     </appender>
 

    <logger name="LOGGER">
      <appender-ref ref="LogFileAppender"/>
      <appender-ref ref="ErrorFile"/>
      <appender-ref ref="Console" />
    </logger>

    <logger name="UserAuthorizer">
      <appender-ref ref="LogFileAppender"/>
      <appender-ref ref="ErrorFile"/>
      <appender-ref ref="Console" />
    </logger>

    <logger name="Program">
      <appender-ref ref="LogFileAppender"/>
      <appender-ref ref="ErrorFile"/>
      <appender-ref ref="Console" />
    </logger>

    <logger name="CollectingTrainingDataset">
      <appender-ref ref="LogFileAppender"/>
      <appender-ref ref="ErrorFile"/>
      <appender-ref ref="Console" />
    </logger>

    <logger name="DecisionTreeBuilder">
      <appender-ref ref="LogFileAppender"/>
      <appender-ref ref="ErrorFile"/>
      <appender-ref ref="Console" />
    </logger>

    <logger name="EmployeeSearcher">
      <appender-ref ref="LogFileAppender"/>
      <appender-ref ref="ErrorFile"/>
      <appender-ref ref="Console" />
    </logger>
    
  </log4net>
</configuration>